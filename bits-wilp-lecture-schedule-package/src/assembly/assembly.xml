<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>bits-wilp-lecture-schedule-package</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>${project.parent.artifactId}</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<directoryMode>0755</directoryMode>
			<fileMode>0744</fileMode>
			<outputDirectory>.</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<fileMode>0744</fileMode>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>org.kiranmohan.bits.wilp:bits-wilp-lecture-schedule</include>
			</includes>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<fileMode>0644</fileMode>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>system_preferences.xml</include>
					<include>user_preferences.xml</include>
				</includes>
			</unpackOptions>
		</dependencySet>
	</dependencySets>
</assembly>